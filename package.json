{
  "name": "flow-control",
  "version": "1.0.0",
  "description": "High-performance API gateway with rate limiting and load balancing for Node.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn clean && yarn build && yarn test"
  },
  "type": "module",
  "keywords": [
    "api-gateway",
    "rate-limiting",
    "load-balancing",
    "express",
    "middleware",
    "proxy",
    "throttling",
    "nodejs",
    "typescript"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rohank05/throttle-balance.git"
  },
  "bugs": {
    "url": "https://github.com/rohank05/throttle-balance/issues"
  },
  "homepage": "https://github.com/rohank05/throttle-balance#readme",
  "author": "Rohan Kumar",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "http-proxy-middleware": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "ts-jest": "^29.1.4",
    "typescript": "^5.9.2"
  }
}
